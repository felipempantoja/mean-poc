<html ng-app="mean-poc" ng-strict-di_>
<head>
	<meta charset="utf-8">
	<title>mean-poc</title>
	<meta name="viewport" content="width=device-width">
	<meta charset="UTF-8">

    <!-- build:css css/index.min.css -->
	<link rel="stylesheet" href="vendor/bootstrap/dist/css/bootstrap.css">
    <link rel="stylesheet" href="vendor/bootstrap/dist/css/bootstrap-theme.css">
    <!-- endbuild -->
</head>
	<body class="container" ng-controller="MainController as vm">
		<div class="jumbotron">
			<h1 class="text-center">Bem vindo ao mean-poc</h1>
		</div>

        <div class="text-right">
            <p>
                Logado como: 
                <span id="usuario-logado"><%=usuarioLogado%></span>.
                <a href="/logout">Sair</a>
            </p>
        </div>

        <p ng-show="vm.mensagem" ng-bind="vm.mensagem"></p>

		<div ng-view></div>

        <!-- build:js js/vendor.min.js -->
		<script src="vendor/angular/angular.js"></script>
		<script src="vendor/angular-route/angular-route.js"></script>
        <script src="vendor/angular-resource/angular-resource.js"></script>
        <!-- endbuild -->

        <!-- build:js js/app.min.js -->
		<script src="app/main.js"></script>
		<script src="app/contatos.service.js"></script>
        <script src="app/contatos.controller.js"></script>
        <!-- endbuild -->
	</body>
</html>
